<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/fab_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:backgroundTint="#FFFFFF"
        android:onClick="onClickDone"
        android:src="@drawable/ic_done_black_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/fab_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:backgroundTint="#FFFFFF"
        android:onClick="onClickClose"
        android:src="@drawable/ic_close_black_24dp" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="90dp"
            android:layout_marginTop="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Infomation"
            android:background="@drawable/duongvien_goctron"
            android:textColor="#DD4849"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_marginTop="40dp"
            app:layout_anchor="@+id/linearLayout"
            app:layout_anchorGravity="center"
            app:srcCompat="@mipmap/ic_launcher_chibiboy_foreground" />

        <EditText
            android:layout_marginTop="50dp"
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#EC0204"
            android:ems="10"
            android:hint="Nhập tên"
            android:gravity="center"
            android:inputType="textPersonName"
            android:textColor="#356F35" />

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/edt_phone"
            android:layout_width="392dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#EC0204"
            android:ems="10"
            android:hint="Nhập số điện thoại"
            android:gravity="center"
            android:inputType="phone"
            android:textColor="#356F35" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="550dp"
        android:layout_marginRight="40dp"
        android:backgroundTint="#EC0204"
        android:onClick="onClickDelete"
        app:srcCompat="@android:drawable/ic_menu_delete" />




</androidx.coordinatorlayout.widget.CoordinatorLayout>




